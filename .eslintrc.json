{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "object-curly-newline": "off",
    "object-property-newline": "off",
    "indent": ["error", 2],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "comma-dangle": ["error", "only-multiline"],
    "quotes": [
      "error",
      "single"
    ],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
  },
  "globals": {
    "$": false
  }
}
